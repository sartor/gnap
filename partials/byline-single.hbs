{{!-- Everything inside the #author tags pulls data from the author --}}
{{#primary_author}}
<hr>
<div class="row font-italic">
    {{#if profile_image}}
    <div class="col-4 col-md-2" style="max-width: 120px;">
        <a href="{{url}}"><img class="img-fluid" src="{{profile_image}}" alt="{{name}}" /></a>
    </div>
    {{/if}}
    <div class="col-8 col-md-10">
        <h4><a href="{{url}}">{{name}}</a></h4>
        {{#if bio}}
            <p>{{bio}}</p>
        {{else}}
            <p><a href="{{url}}">Читате ще пости</a> цього автору</p>
        {{/if}}
    </div>
</div>
<hr>

{{/primary_author}}
