<form method="post" action="{{action}}" id="{{form_id}}" class="form-inline justify-content-end {{form_class}}">
    {{! This is required for the form to work correctly }}
    {{hidden}}

    <div class="input-group input-group-lg {{#if error}}error{{/if}}">
        {{input_email id=input_id class="form-control rounded-0" placeholder="email" value=email autofocus=autofocus}}
        {{#if error}}
            <div class="invalid-feedback">
                {{error.message}}
            </div>
        {{/if}}
        <button id="{{button_id}}" class="btn btn-primary-light rounded-0" type="submit">Долучитись</button>
        {{! This is used to get extra info about where this subscriber came from }}
        {{script}}
    </div>
</form>
